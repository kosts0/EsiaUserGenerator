@using System.Globalization
@using System.Net.Http.Json
@using System.Text.Json.Serialization
@using Microsoft.AspNetCore.Components.Web

@page "/"


<h3 class="text-2xl font-bold mb-4">Список пользователей ESIA</h3>

@if (EsiaUserList == null || EsiaUserList.Length == 0)
{
    <p>Пользователи отсутствуют.</p>
}
else
{
    <div class="overflow-x-auto">
        <table class="min-w-full border border-gray-300 divide-y divide-gray-200">
            <thead class="bg-gray-100">
            <tr>
                <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">OID</th>
                <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Login</th>
                <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Password</th>
                <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Текущий статус</th>
                <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Дата создания</th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var user in EsiaUserList)
            {
                <tr>
                    <td class="px-4 py-2">@user.Oid</td>
                    <td class="px-4 py-2">@user.Login</td>
                    <td class="px-4 py-2">@user.Password</td>
                    <td class="px-4 py-2">@user.Status</td>
                    <td class="px-4 py-2">@user.DateTimeCreated?.ToString("g", CultureInfo.CurrentCulture)</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
<h3>Пример вызова API</h3>

<button @onclick="LoadData">Загрузить</button>

@if (data is null)
{
    
    <p>Нет данных</p>
}
else
{
    <pre>@data</pre>
}

@code {

    public class EsiaUser
    {
        public string? Oid { get; set; }
        public string? Login { get; set; }
        public string? Password { get; set; }
        public string? Status { get; set; }
        public DateTime? DateTimeCreated { get; set; }
    }
    public EsiaUser[]? EsiaUserList { get; set; }
    string? data;

    private class RequestData
    {
        public class EsiaUserData
        {
            
        }
        [JsonPropertyName("data")]
        public EsiaUserData Data { get; set; }
    }

    protected override async void OnInitialized()
    {
        try
        {
            base.OnInitialized();
            EsiaUserList = await Http.GetFromJsonAsync<EsiaUser[]>("/api/storage/commonUsers");
        }
        catch (Exception e)
        {
            EsiaUserList = null;
        }
    }

    async Task LoadData()
    {
        var response = await Http.PostAsJsonAsync<RequestData>("/api/users/start-user-create", new RequestData()
        {
            Data = new()
        });
        data = await response.Content.ReadAsStringAsync();
    }

    [Inject]
    public HttpClient Http { get; set; } = default!;
}
